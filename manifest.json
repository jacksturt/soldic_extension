{
    "manifest_version": 3,
    "name": "Solana Dictionary",
    "version": "1.0",
    "description": "Annotates articles with helpful definitions in the solana ecosystem.",
    "permissions": [
        "activeTab",
        "scripting",
        "storage"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://medium.com/*"
            ],
            "js": [
                "medium.js"
            ],
            "type": "module"
        },
        {
            "matches": [
                "https://x.com/*"
            ],
            "js": [
                "twitter.js"
            ],
            "type": "module"
        }
    ],
    "host_permissions": [
        "http://localhost:3000/*"
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "logo.png",
                "helpers.js"
            ],
            "matches": [
                "https://medium.com/*",
                "https://x.com/*"
            ]
        }
    ]
}